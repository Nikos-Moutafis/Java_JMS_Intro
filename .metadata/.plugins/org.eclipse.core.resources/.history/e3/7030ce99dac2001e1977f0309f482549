
public class Test {

	public static void main(String[] args) {

		System.out.println("ddd");
	}

	// We want to take each char from each string and append the sum of them
	// to a new string at the respective position
	public static String sumStrings(String a, String b) {
		StringBuilder sbForA = new StringBuilder();
		StringBuilder sbForB = new StringBuilder();
		StringBuilder result = new StringBuilder();

		// Convert to numeric values, add them and append them to sb
		if (a.length() == 0 || b.length() == 0) {
			return "0";
		}

		int resultSum = 0;
		int aNum = Integer.parseInt(a);
		int bNum = Integer.parseInt(b);

		resultSum = aNum + bNum;

		result.append(String.valueOf(resultSum));

		// return the result as String
		return result.reverse().toString();
	}

}
